<div class='text-center'>
  <h2>{{title}}</h2>
  <p>Created by {{user.username}} on {{format_date date_created}}</p>

  <form class="form edit-project-form">
    <div class="form-group">
      <label for="title">post title:</label>
      <input class="form-input" type="text" id="title" name="title" value="{{title}}"/>
    </div>
    <div class="form-group">
      <label for="content">post content:</label>
      <textarea class="form-input" id="content" name="content">{{content}}</textarea>
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-primary" id="editpost" data-id="{{id}}">Edit Post</button>
    </div>
  </form>
</div>
<script src="../js/post.js"></script>


  <a href='/dashboard'>dashboard</a>
  |
  <a href='/'>home</a>
</div>
