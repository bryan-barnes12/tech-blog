<!-- Loop over each object in the projects array -->
{{#each posts as |post|}}
  <div class='row mb-4 project'>
    <a href='/post/{{post.id}}'>
      <div class='col-md-12'>
        <h2>{{post.title}}</h2>
        <p>Created by
          {{post.user.username}}
          on
          {{format_date post.date_created}}</p>
      </div>
      <div class='col-md-7'>
        <p>
          {{post.content}}
        </p>
        {{#if post.comments.length}}
          <p>view comments...</p>
        {{/if}}
      </div>
    </a>
  </div>
{{/each}}