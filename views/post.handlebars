<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{content}}</p>
  <p>Created by {{user.username}} on {{format_date date_created}}</p>
    {{#if comments.length}}
    {{#each comments as |comment| }}
    <div>
      <p>{{comment.content}}</p>
      <p>Posted by {{comment.user.username}} on {{format_date comment.date_created}}</p>
    </div>
    {{/each}}
    {{/if}}
    {{#if logged_in}}
    <h3>Add a comment</h3>
    <form class="form new-project-form">
      <div class="form-group">
        <label for="comment">comment:</label>
        <textarea class="form-input" id="comment" name="comment"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary" id="{{id}}" data-id="{{id}}">Submit</button>
      </div>
    </form>
  </div>
  {{/if}}
  <a href="/dashboard">dashboard</a> | 
  <a href="/">home</a>
</div>
<script src="../js/comment.js"></script>
